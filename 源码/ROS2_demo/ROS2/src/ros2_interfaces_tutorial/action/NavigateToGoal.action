# NavigateToGoal.action
# 机器人导航到目标点的动作

# 目标部分 (Goal)
# -----------------------------------
# 机器人ID
int32 robot_id

# 目标位置
float64 goal_x
float64 goal_y
float64 goal_z

# 最大速度（米/秒）
float32 max_speed

# 最大转角速度（弧度/秒）
float32 max_rotational_speed

# 是否使用导航规划
bool use_path_planning
---
# 结果部分 (Result)
# -----------------------------------
# 是否成功到达目标
bool success

# 实际到达的位置
float64 final_x
float64 final_y
float64 final_z

# A*规划产生的路径点数
int32 path_points_count

# 总行驶距离（米）
float64 total_distance

# 总耗时（秒）
float64 total_time

# 结果消息
string result_message
---
# 反馈部分 (Feedback)
# -----------------------------------
# 当前位置
float64 current_x
float64 current_y
float64 current_z

# 与目标的距离（米）
float64 distance_to_goal

# 预计剩余时间（秒）
float32 estimated_time_remaining

# 当前速度（米/秒）
float32 current_speed

# 导航进度（0.0-1.0）
float32 progress

# 当前状态
string current_status 